<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:paddingTop="8dp">

    <TextView
        android:textSize="18sp"
        android:layout_alignTop="@id/image_view_play"
        android:layout_alignBottom="@id/image_view_play"
        android:maxLines="1"
        android:layout_marginEnd="16dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/image_view_play"
        android:ellipsize="end"
        android:id="@+id/tex_view_channel_name"
        android:textColor="@color/colorTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@id/image_view_stop"
        android:id="@+id/image_view_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"/>

    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/image_view_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_stop"/>
</RelativeLayout>
